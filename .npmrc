# إعدادات PNPM

# استخدام الإصدار الدقيق للحزم
save-exact=true

# تفعيل workspaces
link-workspace-packages=true

# تعطيل التثبيت التلقائي للحزم غير المدرجة في package.json
strict-peer-dependencies=true

# تفعيل الوضع الصارم
strict=true

# تعطيل تثبيت الحزم الاختيارية تلقائيًا
optional=false

# تعيين مستوى التفصيل في السجلات
loglevel=warn

# تعيين سجل NPM الافتراضي
registry=https://registry.npmjs.org/