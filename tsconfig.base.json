{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@internal-linking-analyzer-pro/types": ["packages/types/src"],
      "@internal-linking-analyzer-pro/types/*": ["packages/types/src/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
